<p id="notice"><%= notice %></p>

<h1>Entrada de Medicamentos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.medicamento.nombreMedi %></td>
        <td><%= proveedor.cantidad %></td>
        <td><%= link_to 'Ver', proveedor %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Borrar', proveedor, method: :delete, data: { confirm: 'Seguro que quiere eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

