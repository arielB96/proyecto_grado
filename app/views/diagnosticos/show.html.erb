<p id="notice"><%= notice %></p>
<div class="col-sm-4">
 <table>
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Nombre</th>
      </tr>
    </thead>
    <tbody>
        <%= @diagnostico.ficha_docs.each do |c|  %>
        <tr>
          <td><%= c.tratamiento %></td>
          <td></td>
        </tr>
        <%end%>
    </tbody>
  </table>

</div>
<div class="col-sm-8">
    <div class="row">
       <div class="col-sm-6">
        <strong>Fecha:</strong>
         <%= @diagnostico.fecha %>
      </div>
      <div class="col-sm-6">
        <strong>Axila Rectal:</strong>
         <%= @diagnostico.axilaRectal %>
      </div>
      <div class="col-sm-6">
        <strong>Presion Arterial:</strong>
        <%= @diagnostico.presionArterial %>
      </div>
      <div class="col-sm-6">
        <strong>Frecuencia Cardiaca:</strong>
        <%= @diagnostico.freCardiaca %>
      </div>
      
      <div class="col-sm-6">
        <strong>Nombre:</strong>
        <%= @diagnostico.ficha_medica.nombre %>
        <%= @diagnostico.ficha_medica.apellido %>
      </div>
</div><BR><BR>
 
<div class="row">

        <%= form_for([@diagnostico, @diagnostico.ficha_docs.build]) do |f| %>
          <div class="col-sm-6">
            <%= f.label :motivoConsul, 'Motivo de la Consulta' %>
            <%= f.text_area :motivoConsul, id: :ficha_doc_motivoConsulc, class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :examenFisico, 'Examen Fisico' %>
            <%= f.text_area :examenFisico, id: :ficha_doc_examenFisico, class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :otroDiagnos, 'Otros Diagnosticos' %>
            <%= f.text_area :otroDiagnos, id: :ficha_doc_otroDiagnos, class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :tratamiento, 'Tratamiento' %>
            <%= f.text_area :tratamiento, id: :ficha_doc_tratamiento, class: "form-control" %><BR>

            <%= f.submit 'Guardar' , class: "btn btn-success"%>
            <%= link_to 'Atras', diagnosticos_path, class: "btn btn-info" %>
          </div>
    </div>     
</div>
      <% end -%>