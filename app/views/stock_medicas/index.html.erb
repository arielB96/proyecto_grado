<!DOCTYPE html>
<p id="notice"><%= notice %></p>

<h1>Stock de Medicamentos</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre Paciente</th>
      <th>Apellido</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_medicas.each do |stock_medica| %>
      <tr>
        <td><%= stock_medica.ficha_doc.diagnostico.ficha_medica.nombre %></td>
        <td><%= stock_medica.ficha_doc.diagnostico.ficha_medica.apellido %></td>
          
        <td><span class= "badge-success"><%= stock_medica.cantidad %></span></td>
        <td><%= link_to 'Ver', stock_medica %></td>
        <td><%= link_to 'Editar', edit_stock_medica_path(stock_medica) %></td>
        <td><%= link_to 'Borrar', stock_medica, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
