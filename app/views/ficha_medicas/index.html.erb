<h1>Fichas Medicas</h1>
  <table id="ficha_table" class="table table-hover">
        <thead>
          <tr>
            <th>Nº de Ficha</th> 
            <th>C.I.Nº</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Tipo de Ficha</th>
            <th>Puesto</th>
            <th>Ver</th>
             <th>Editar</th>
          </tr>
        </thead>

        <tbody>
          <% @ficha_medicas.each do |ficha_medica| %>
            <tr>
              <td><%= ficha_medica.numero %></td>
              <td><%= ficha_medica.ci %></td>
              <td><%= ficha_medica.nombre %></td>
              <td><%= ficha_medica.apellido %></td>
              <td><%= ficha_medica.categori.tipo %></td>
              <td><%= ficha_medica.puesto_salud.nombre %></td>
               
              <td><%= link_to '', ficha_medica , class: "btn btn-primary btn-sm fa fa-eye" %></td>
              <td><%= link_to '', edit_ficha_medica_path(ficha_medica), class: "btn btn-default btn-sm fa fa-pencil" %></td>
              
            </tr>
             <% end %>
         
        </tbody>
      </table>
   


